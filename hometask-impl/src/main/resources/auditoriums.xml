<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util.xsd">

    <context:property-placeholder location="auditorium.properties"
                                  system-properties-mode="OVERRIDE" ignore-resource-not-found="false" />

    <bean id="auditorium_red" class="ua.epam.spring.hometask.domain.Auditorium">
        <constructor-arg value="${auditorium.red.vip}" />
        <property name="name" value="${auditorium.red.name}" />
        <property name="numberOfSeats" value="${auditorium.red.seat}" />
    </bean>

    <bean id="auditorium_green" class="ua.epam.spring.hometask.domain.Auditorium">
        <constructor-arg value="${auditorium.green.vip}" />
        <property name="name" value="${auditorium.green.name}" />
        <property name="numberOfSeats" value="${auditorium.green.seat}" />
    </bean>

    <bean id="auditorium_blue" class="ua.epam.spring.hometask.domain.Auditorium">
        <constructor-arg value="${auditorium.blue.vip}" />
        <property name="name" value="${auditorium.blue.name}" />
        <property name="numberOfSeats" value="${auditorium.blue.seat}" />
    </bean>

    <util:map id="auditoriumMap">
        <entry key="RED" value-ref="auditorium_red" />
        <entry key="GREEN" value-ref="auditorium_green" />
        <entry key="BLUE" value-ref="auditorium_blue" />
    </util:map>


</beans>